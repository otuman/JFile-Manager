<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="4dp"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/category_collection_icon"
        android:src="@drawable/ic_image"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:layout_toEndOf="@+id/category_collection_icon"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="0dp"
        android:layout_alignParentTop="true"
        android:text="Resource Name"
        android:id="@+id/category_collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:layout_marginEnd="10dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/category_collection_icon"
        android:layout_below="@+id/category_collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_storage_drive"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        />
    <TextView
        android:id="@+id/disk_content_numbers"
        android:layout_below="@+id/progress_storage_drive"
        android:layout_marginEnd="10dp"
        android:paddingEnd="4dp"
        android:paddingStart="0dp"
        android:layout_alignParentEnd="true"
        android:text="Disk numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>